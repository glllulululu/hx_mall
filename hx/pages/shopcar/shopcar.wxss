.divAll{
  width: 100%;
  height: 2400rpx;
}
.container2{
  width: 100%;
  /* height:1600rpx ; */
  background-color: rgb(245,245,245);
}
/* 购物车为空时的样式 */
.wannaBuy{
  width: 100%;
  height: 600rpx;
  background-color: white;
}
.noproduct {
  width: 280rpx;
  height: 260rpx;
  position: absolute;
  left: 230rpx;
  top: 110rpx;
}
.fontCar{
padding-top: 400rpx;
padding-left: 140rpx;
color: rgb(130,132,130);
}
.btncar{
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 40rpx;
  margin-top: 30rpx;
  color: rgb(118,118,118);
  /* border: 1px solid rgb(241,241,241); */
}
/* 购物车不为空时样式 */
/* 头部 */
.buyCartop{
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  background-color: white;
}
.buycartop_left{
  display: flex;
  justify-content: space-between;
}
.buycartop_left>image{
  width: 40rpx;
  height: 30rpx;
}
.buycartop_leftFont{
  margin-top: -5rpx;
}
.buycartop_rightFont{
margin-right: 20rpx;
font-size: 28rpx;
}
/* 中间 */
.car_middleAll{
  /* border: 1px solid black; */
  background-color: white;
  margin-top: 30rpx;
}
.car_middle{
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}
.buycar_img>image{
  width: 200rpx;
  height: 180rpx;
  border-radius: 10rpx;
}
.car_middle1{
  display: flex;
  justify-content: space-between;
  margin-left: -70rpx;
}
.buycar_count{
  display: flex;
  justify-content: space-between;
  margin-top: 130rpx;
  margin-right: 20rpx;
}
button{
  width: 30rpx;
  height: 40rpx;
  font-size: 35rpx;
  line-height: 40rpx;
padding-right: 40rpx;
  background-color: white;
  border: 1px solid white;
}

.buycar_input{
  width: 70rpx;
  border-radius: 20rpx;
  background-color: rgb(245,245,245);
  text-align: center;
}
.buycar_font{
  margin-left: 50rpx;
  margin-top: 10rpx;
}
.buycar_font>view:nth-child(2){
margin-top: 80rpx;
color:rgb(255,97,1) ;
font-weight: bold;
}

.isRuleShow {
  opacity: 1;
}
.isRuleHide {
  opacity: 0;
}
/* 推荐商品 */
.descript>view>image {
  width: 120rpx;
  height: 60rpx;
  opacity: 0.5;
}
.descript {
  display: flex;
  flex-direction: row;
  justify-content: start;
  background-color: #F5F5F5;
  height:68rpx;
  margin-top:25rpx;
  padding-left:160rpx;
}
.blank{
  background-color: white;
  width: 100%;
  color: white;
  height:50rpx;
  border: 1px solid black;
}
.salescript{
  background-color: white;
  width: 100%;
  /* border: 1px solid black; */
}
.sale_outPrice {
  color: rgb(255,96,0);
}
.desfont{
  margin-top:8rpx;
}
.sale{
  width:29%;
  height:400rpx;
  display:flex;
  flex-direction:column;
  float:left;
  justify-content: space-around;
  background-color: white;
  border-radius:6rpx;
  padding:10rpx;
  margin:5rpx;
  margin-bottom:20rpx;
}
.sale_img>image{
  width:100%;
  height:200rpx;
  border-radius:6rpx;
}
.desfont{
  margin-top:8rpx;
}
/* 授权登录 */
.power_title {
  display: flex;
  justify-content: start;
}

.power_head {
  width: 60rpx;
  height: 60rpx;
  margin-top: 40rpx;
  margin-left: 30rpx;
  border-radius: 30rpx;
}
.power_font,
.power_close {
  margin-top: 50rpx;
}

.power_close {
  margin-left: 350rpx;
}

.power_close>text,
.get_close {
  font-size: 35rpx;
  color: rgb(117, 113, 113);
}
.checkrideo .wx-checkbox-input {
  border-radius: 50%;
  width: 35rpx;
  height: 35rpx;
  margin-top: 80rpx;
  margin-left: 20rpx;
}
.checkrideo .wx-checkbox-input.wx-checkbox-input-checked::before{
  width: 50rpx;
  height: 50rpx;
  color:white;
  border-radius: 50%;
  background-color: rgb(255,96,0);
}