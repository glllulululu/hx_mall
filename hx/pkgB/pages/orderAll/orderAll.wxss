/* pages/orderAll/orderAll.wxss */
page {
  background-color: #F5F5F5;
}
.navBar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  line-height: 70rpx;
  color: rgb(127, 127, 127);
  position: relative;
}
.active {
  color: black;
  font-weight: bold;
}

.nav-silder {
  transition: all linear .3s;
  width: 48px;
  height: 4rpx;
  background-color: red;
  position: absolute;
  bottom: 0;
}
.content-page {
  width: 100%;
  /* background-color: pink; */
}

.swiper-content {
  height: calc(100vh - 0rpx)
}

.scroll {
  height: 100%;
}

.showNone {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  color: #999999;
}

.showNone>image {
  width: 400rpx;
  height: 400rpx;
}
.content-right2{
  width: 200rpx;
  font-size: 30rpx;
}

.order-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.orderImg {
  width: 200rpx;
  height: 180rpx;
}

.orderImg>image {
  width: 100%;
  height: 100%;
}

.pname {
  font-weight: bold;
}

.content-middle>view {
  margin-bottom: 10rpx;
  width: 200rpx;
  text-align: center;
}
.order{
  margin: 20rpx 0;
}
.service1 {
  background-color: rgb(238, 236, 236);
  color: #999999;
}

.service2 {
  color: #ff6000;
}

.comm {
  width: 200rpx;
  border-radius: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  background-color: #ff6000;
  color: white;
}
.haveShow{
  position: relative;
  background-color: white;
  margin: 20rpx;
  padding: 20rpx;
  padding-bottom: 60rpx;
  border-radius: 20rpx;
}
.allPrice{
  /* border: 1px solid red; */
  font-weight: bold;
}
.line-top{
 display: flex;
  justify-content: space-between;
}
.content-right{
  text-align: center;
  width:100rpx ;
}
.orderId{
  color: #999999;
  font-size: 30rpx;
  padding-bottom: 20rpx;
}
.colorg{
  color: #999999;
}
